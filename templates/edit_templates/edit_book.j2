{% extends 'base.html' %}
{% block header %}
<h1>
    {% block title %}Edit Books{% endblock %}
</h1>
{% endblock %}
{% block content %}


<div>
    <table class="table">
        <thead>
            <tr>
                <th class="table_cell">Book ID</th>
                <th class="table_cell">Title</th>
                <th class="table_cell">First Name</th>
                <th class="table_cell">Last Name</th>
                <th class="table_cell">ISBN</th>
                <th class="table_cell">Publisher</th>
                <th class="table_cell">Year</th>
                <th class="table_cell">New Qty</th>
                <th class="table_cell">New Price</th>
                <th class="table_cell">Used Qty</th>
                <th class="table_cell">Used Price</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="table_cell">{{data[0].idBook}}</td>
                <form method="post">
                    <td class="table_cell">
                        <input type="text" name="title" value="{{ data[0].title }}" required>
                        </input>
                    </td>
                    <td class="table_cell">
                        <input type="text" name="firstName" value="{{ data[0].firstName }}" required>
                        </input>
                    </td>
                    <td class="table_cell">
                        <input type="text" name="lastName" placeholder="Last name" value="{{ data[0].lastName }}"
                            required>
                        </input>
                    </td>
                    <td class="table_cell">
                        <input type="text" name="isbn" placeholder="xxx-x-xx-xxxxxx-x" value="{{ data[0].isbn }}"
                            pattern="[0-9]{3}-[0-9]{1}-[0-9]{2}-[0-9]{6}-[0-9]{1}" title="xxx-x-xx-xxxxxx-x" required>
                        </input>
                    </td>
                    <td class="table_cell">
                        <input type="text" name="publisher" placeholder="publisher" value="{{ data[0].publisher }}"
                            required>
                        </input>
                    </td>
                    <td class="table_cell">
                        <input type="text" name="publicationYear" placeholder="publicationYear"
                            value="{{ data[0].publicationYear }}" pattern="\d{4}" title="####" required>
                        </input>
                    </td>
                    <td class="table_cell">
                        <input type="number" name="newStock" placeholder="newStock" min="0"
                            value="{{ data[0].newStock }}" required>
                        </input>
                    </td>
                    <td class="table_cell">
                        <input type="number" name="newPrice" placeholder="newPrice" value="{{ data[0].newPrice }}"
                            min="0" step="0.01" required>
                        </input>
                    </td>
                    <td class="table_cell">
                        <input type="number" name="usedStock" placeholder="usedStock" min="0"
                            value="{{ data[0].usedStock }}" required>
                        </input>
                    </td>
                    <td class="table_cell">
                        <input type="number" name="usedPrice" placeholder="usedPrice" value="{{ data[0].usedPrice }}"
                            min="0" step="0.01" required>
                        </input>
                    </td>
                    <td class="table_cell">
                        <input type="submit" name="Edit_Book" value="Edit_Book" class="btn">
                        <a href="/books"><button type="button">Cancel</button></a>
                    </td>
                </form>
            </tr>
        </tbody>
    </table>
</div>
{% endblock %}