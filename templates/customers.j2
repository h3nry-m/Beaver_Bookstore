{% extends 'base.html' %}
{% block header %}
    <h1>{% block title %} Customers {% endblock %}</h1>
{% endblock %}
{% block content %}
<table id="browse" class="table">
    <thead>
    <tr>
        <th class="table_cell">    
            <input type="button" class="new" onclick="newCustomer()" value="New">
        </th>
        <th class="table_cell">Customer ID</th>
        <th class="table_cell">First Name</th>
        <th class="table_cell">Last Name</th>
        <th class="table_cell">Email</th>
        <th class="table_cell">Phone number</th>
        <th class="table_cell">Street Address</th>
        <th class="table_cell">City</th>
        <th class="table_cell">State</th>
        <th class="table_cell">Zip Code</th>
    </tr>
    <tbody>
       {% for item in customers %}
       <tr>
        <td class="table_cell">
       {% for key in item.keys() %}
              <td class="table_cell"> {{item[key]}} </td>
       {% endfor %}
       
            <td class="table_cell"><input type="button" class="edit" onclick="{{item.id}}" value="Edit"></td>
            <td class="table_cell"><input type="button" class="delete" onclick="{{item.id}}" value="Delete"></td>
        </td>
    </tr>
    {% endfor %}
</table>

<div id="create" style="display: none;"">

    <form id="addCustomer" method="POST">
        <legend>
            <h2>Add a customer</h2>
        </legend>
        <label for="firstName">First Name</label>
        <input type="text" name="name"
               placeholder="First name"
               value="{{ request.form['firstName'] }}"></input>
        <br>

        <label for="lastName">Last Name</label>
        <input type="text" name="lastName"
               placeholder="Last name"
               value="{{ request.form['lastName'] }}"></input>
        <br>

        <label for="email">Email</label>
        <input type="email" name="email"
               placeholder="Email"
               value="{{ request.form['email'] }}"></input>
        <br>

        <label for="phoneNumber">Phone Number</label>
        <input type="text" name="phoneNumber"
               placeholder="(xxx)-xxx-xxx"
               value="{{ request.form['phoneNumber'] }}"></input>
        <br>

        <label for="addressStreet">Street</label>
        <input type="text" name="addressStreet"
               placeholder="addressStreet"
               value="{{ request.form['addressStreet'] }}"></input>
        <br>

        <label for="addressState">State</label>
        <input type="text" name="addressState"
               placeholder="addressState"
               value="{{ request.form['addressState'] }}"></input>
        <br>

        <label for="addressZip">Zip Code</label>
        <input type="number" name="addressZip"
               placeholder="number"
               value="{{ request.form['addressZip'] }}"></input>
        <br>
        <button type="submit">Submit</button>
    </form>
</div>

