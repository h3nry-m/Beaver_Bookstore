{% extends 'base.html' %}
{% block header %}
    <h1>
        {% block title %}Books{% endblock %}
    </h1>
{% endblock %}
{% block content %}
    <div id="search">
        <input type="text" placeholder="Search Books..." id="searchBooks">
    </div>
    <table id="browse" class="table">
        <thead>
            <tr>
                <th class="table_cell">
                    <input type="button" class="new" onclick="newOrder()" value="New">
                </th>
                <th class="table_cell">Book ID</th>
                <th class="table_cell">Title</th>
                <th class="table_cell">First Name</th>
                <th class="table_cell">Last Name</th>
                <th class="table_cell">ISBN</th>
                <th class="table_cell">Publisher</th>
                <th class="table_cell">Year</th>
                <th class="table_cell">New Qty</th>
                <th class="table_cell">New Price</th>
                <th class="table_cell">Used Qty</th>
                <th class="table_cell">Used Price</th>
            </tr>
            <tbody>
                {% for item in books %}
                    <tr>
                        <td class="table_cell">
                            {% for key in item.keys() %}
                                <td class="table_cell">{{ item[key] }}</td>
                            {% endfor %}
                            <td class="table_cell">
                                <a href="edit_book/{{ item.idBook }}" type="button" >Edit</a>
                            </td>
                            <td class="table_cell">
                                <a href="delete_book/{{ item.idBook }}" type="button" >Delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
       
              <div id="create">
                    <form id="addBook" method="POST">
                        <legend>
                            <h2>Add a book</h2>
                        </legend>
                        <label for="title">Title</label>
                        <input type="text"
                               name="title"
                               placeholder="Title"
                               value="{{ request.form['title'] }}">
                    </input>
                    <br>
                    <label for="firstName">First Name</label>
                    <input type="text"
                           name="firstName"
                           placeholder="First name"
                           value="{{ request.form['firstName'] }}">
                </input>
                <br>
                <label for="name">Last Name</label>
                <input type="text"
                       name="lastName"
                       placeholder="Last name"
                       value="{{ request.form['lastName'] }}">
            </input>
            <br>
            <label for="isbn">ISBN</label>
            <input type="text"
                   name="isbn"
                   placeholder="xxx-x-xx-xxxxxx-x"
                   value="{{ request.form['isbn'] }}">
               </input>
               <br>
               <label for="publisher">Publisher</label>
               <select id="publisher" name="publisher">
                   {% for publisher in publishers %}
                       <option value="{{ publisher['publisher'] }}">
                           {{ publisher['publisher'] }}
                       </option>
                   {% endfor %}
               </select>
               <br>
               <label for="publicationYear">publicationYear</label>
               <input type="number"
                      name="publicationYear"
                      placeholder="publicationYear"
                      value="{{ request.form['publicationYear'] }}">
           </input>
           <br>
           <label for="newStock">New Stock</label>
           <input type="number"
                  name="newStock"
                  placeholder="newStock"
                  value="{{ request.form['newStock'] }}">
              </input>
              <br>
              <label for="newPrice">New Price</label>
              <input type="number"
                     step="0.01"
                     name="newPrice"
                     placeholder="newPrice"
                     value="{{ request.form['newPrice'] }}">
              </input>
              <br>
              <label for="usedStock">used Stock</label>
              <input type="number"
                     name="usedStock"
                     placeholder="usedStock"
                     value="{{ request.form['usedStock'] }}">
              </input>
              <br>
              <label for="usedPrice">Used Price</label>
              <input type="number"
                     step="0.01"
                     name="usedPrice"
                     placeholder="usedPrice"
                     value="{{ request.form['usedPrice'] }}">
              </input>
              <br>
              <input type="submit" value="Add book" name="Add_Book" class="btn">
              <input type="button" id="cancel" onclick="cancelOrder()" value="Cancel">
              </form>
              </div>
              


       <div id="update">
           <form id="updateBook" method="POST">
               <legend>
                   <h2>Edit a Book</h2>
               </legend>
               <label for="title">
                   Title
               </label>
               <input type="text"
                      name="title"
                      placeholder="Title"
                      value="{{ request.form['title'] }}">
           </input>
           <br>
           <label for="firstName">
               First Name
           </label>
           <input type="text"
                  name="name"
                  placeholder="First name"
                  value="{{ request.form['firstName'] }}">
       </input>
       <br>
       <label for="name">
           Last Name
       </label>
       <input type="text"
              name="lastName"
              placeholder="Last name"
              value="{{ request.form['lastName'] }}">
       </input>
       <br>
       <label for="isbn">
           ISBN
       </label>
       <input type="text"
              name="isbn"
              placeholder="xxx-x-xx-xxxxxx-x"
              value="{{ request.form['isbn'] }}">
       </input>
       <br>
       <label for="publisher">
           Publisher
       </label>
       <select id="publisher" name="publisher">
           {% for publisher in publishers %}
               <option value="{{ request.form['publisher'] }}">
                   {{ publisher['publisher'] }}
               </option>
           {% endfor %}
       </select>
       <br>
       <label for="publicationYear">
           publicationYear
       </label>
       <input type="number"
              name="publicationYear"
              placeholder="publicationYear"
              value="{{ request.form['publicationYear'] }}">
       </input>
       <br>
       <label for="newStock">
           New Stock
       </label>
       <input type="number"
              name="newStock"
              placeholder="newStock"
              value="{{ request.form['newStock'] }}">
       </input>
       <br>
       <label for="newPrice">
           New Price
       </label>
       <input type="number"
              name="New Price"
              placeholder="newPrice"
              value="{{ request.form['newPrice'] }}">
       </input>
       <br>
       <label for="usedStock">
           used Stock
       </label>
       <input type="number"
              name="usedStock"
              placeholder="usedStock"
              value="{{ request.form['usedStock'] }}">
       </input>
       <br>
       <label for="usedPrice">
           Used Price
       </label>
       <input type="number"
              name="Used Price"
              placeholder="usedPrice"
              value="{{ request.form['usedPrice'] }}">
       </input>
       <br>
       <input type="button" class="update" onclick="" value="Update">
       <input type="button" id="cancel" onclick="cancelOrder()" value="Cancel">
       </form>
       </div>
       


       <div id="delete" style="display: none;">
           <form id="DeleteBook" method="POST">
               <legend>
                   <h2>
                       Delete a Book
                   </h2>
               </legend>
               <p>
                   Are you sure you want to delete this book?
               </p>
               <label>
                   Book ID: 1
               </label>
               <br>
               <label>
                   Title: Euphoria
               </label>
               <br>
               <labe>First Name: Lily
           </label>
           <br>
           <label>
               Last Name: King
           </label>
           <br>
           <label>
               <input type="button" class="submit" onclick="" value="Submit">
               <input type="button" id="cancel" onclick="CancelOrder()" value="Cancel">
           </form>
       </div>
       <br>
       <input type="button" id="all" onclick="showAll()" value="Show All">
       <input type="button"
              id="hide"
              style="display: none;"
              onclick="hideAll()"
              value="Hide All">
{% endblock %}
